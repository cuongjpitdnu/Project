                            //日本語
                            if($user['language_type'] == 0) {
                                if(count($arrTempMailJP) == 0) {
                                    array_push($arrTempMailJP, $user['mail_address']);
                                    $arrMail['jpn'][] = array(
                                        'USER_NAME' => $user['user_name'],
                                        'MAIL_ADDRESS' => $user['mail_address'],
                                    );
                                } else {
                                    if(!in_array($user['mail_address'], $arrTempMailJP)) {
                                        array_push($arrTempMailJP, $user['mail_address']);
                                        $arrMail['jpn'][] = array(
                                            'USER_NAME' => $user['user_name'],
                                            'MAIL_ADDRESS' => $user['mail_address'],
                                        );
                                    }
                                }
                                //英語
                            } else {
                                if(count($arrTempMailEN) == 0) {
                                    array_push($arrTempMailEN, $user['mail_address']);
                                    $arrMail['eng'][] = array(
                                        'USER_NAME' => $user['user_name'],
                                        'MAIL_ADDRESS' => $user['mail_address'],
                                    );
                                } else {
                                    if(!in_array($user['mail_address'], $arrTempMailEN)) {
                                        array_push($arrTempMailEN, $user['mail_address']);
                                        $arrMail['eng'][] = array(
                                            'USER_NAME' => $user['user_name'],
                                            'MAIL_ADDRESS' => $user['mail_address'],
                                        );
                                    }
                                }
                            }
                        }

                        $strSQL = ' SELECT * FROM t_incident_case ';
                        $strSQL.= ' WHERE t_incident_case.incident_case_no = ? ';

                        $arrResult = fncSelectOne($strSQL, array($intIncidentNo),SCREEN_NAME);
                        //メール内容の取得に失敗した場合
                        if($arrResult == 0) {
                            $_SESSION['INCIDENT_CASE_EDIT_ERROR'][] = $arrTextTranslate['PUBLIC_MSG_001'];
                            if(count($_SESSION['INCIDENT_CASE_EDIT_ERROR']) > 0) {
                                $strHtmlError = '';
                                foreach($_SESSION['INCIDENT_CASE_EDIT_ERROR'] as $strError) {
                                    $strHtmlError .= '<div>'.$strError.'</div>';
                                }
                                $arrRes['error'] = $strHtmlError;
                                echo json_encode($arrRes);
                                exit;
                            }
                        }

                        //メール件名
                        $arrSubject = array(
                            'jpn' => '',
                            'eng' => '',
                        );
                        //メール本文
                        $arrBody = array(
                            'jpn' => '',
                            'eng' => '',
                        );
                        if(count($arrResult) > 0) {
                            $arrSubject['jpn'] = trim($arrResult['TITLE_JPN']);
                            $arrSubject['eng'] = trim($arrResult['TITLE_ENG']);

                            $arrBody['jpn'] = fncHtmlSpecialChars(trim($arrResult['CONTENTS_JPN']));
                            //改行対応
                            $arrBody['jpn'] = str_replace(array("\r\n", "\r","\n"), '<br>',
                                                          $arrResult['CONTENTS_JPN']);
                            $arrBody['eng'] = fncHtmlSpecialChars(trim($arrResult['CONTENTS_ENG']));
                            $arrBody['eng'] = str_replace(array("\r\n", "\r","\n"), '<br>',
                                                          $arrResult['CONTENTS_ENG']);
                        }

                        foreach($arrMail as $lang => $listMail) {
                            if(count($listMail) > 0) {
                                $strSubjectSend = ($lang == 'jpn') ? $arrSubject['jpn'] : $arrSubject['eng'];
                                $strBodySend    = ($lang == 'jpn') ? $arrBody['jpn'] : $arrBody['eng'];

                                if($strSubjectSend == '') {
                                    $strSubjectSend = ($lang == 'jpn') ? $arrSubject['eng'] : $arrSubject['jpn'];
                                }

                                if($strBodySend == '') {
                                    $strBodySend = ($lang == 'jpn') ? $arrBody['eng'] : $arrBody['jpn'];
                                }

                                fncSendMail($listMail, $strSubjectSend, $strBodySend, '');
                            }
                        }
                    }

                    $arrRes['success'] = 1;
                    echo json_encode($arrRes);
                    exit;
                }
            }
        }
    }


    /**
