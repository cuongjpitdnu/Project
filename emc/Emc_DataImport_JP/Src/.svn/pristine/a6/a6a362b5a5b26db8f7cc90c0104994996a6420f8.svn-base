                                   ? fncHtmlSpecialChars(trim($arrDataIncident[0]['CONTENTS_JPN'])) : '';
        }

        $arrRes = array(
            'INCIDENT_CASE_NO' => $arrDataIncident[0]['INCIDENT_CASE_NO'],
            'S_DATE' => $dtmStartDate->format('Y/m/d H:i'),
            'TITLE_ORIGINAL' => $strTitle_original,
