            $strTitle_translate = @$arrDataIncident[0]['TITLE_ENG']
                                ? fncHtmlSpecialChars(trim($arrDataIncident[0]['TITLE_ENG'])) : '';
            $strContents_original = @$arrDataIncident[0]['CONTENTS_JPN']
                                  ? fncHtmlSpecialChars(trim($arrDataIncident[0]['CONTENTS_JPN'])) : '';
            $strContents_translate = @$arrDataIncident[0]['CONTENTS_ENG']
                                   ? fncHtmlSpecialChars(trim($arrDataIncident[0]['CONTENTS_ENG'])) : '';
        } else {
            $strTitle_original = @$arrDataIncident[0]['TITLE_ENG']
                               ? fncHtmlSpecialChars(trim($arrDataIncident[0]['TITLE_ENG'])) : '';
            $strTitle_translate = @$arrDataIncident[0]['TITLE_JPN']
