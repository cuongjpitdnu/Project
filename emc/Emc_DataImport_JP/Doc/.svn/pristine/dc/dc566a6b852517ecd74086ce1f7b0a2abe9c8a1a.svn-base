.input-tab {
    display: none;
}
.tabinator label {
    box-sizing: border-box;
    display: inline-block;
    padding: 8px 20px;
    background-color: #90CAF9;
    border-radius: 5px 5px 0 0;
    margin: 0;
}
.tabinator label:before {
    content: '';
    display: block;
    width: 100%;
    position: absolute;
    bottom: -11px;
    left: 0;
    z-index: 10;
}

.tabinator input:checked + label {
    position: relative;
    color: #fff;
    background: #10253f;
    border-radius: 5px 5px 0 0;
}
.tabinator input:checked + label:after {
    display: block;
    content: '';
    position: absolute;
    top: 0; right: 0; bottom: 0; left: 0;
}
#content1, #content2{
    display: none;
    padding: 15px;
}
#tab1:checked ~ #content1,
#tab2:checked ~ #content2{
    display: block;
    background: #10253f;
}